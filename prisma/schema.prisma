generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Record {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  files     File[]
}

model File {
  id              String   @id @default(cuid())
  filename        String
  mimetype        String
  sizeBytes       Int
  path            String
  createdAt       DateTime @default(now())
  record          Record   @relation(fields: [recordId], references: [id], onDelete: Cascade)
  recordId        String
  extractionStatus String  @default("PENDING") // PENDING, PROCESSING, COMPLETED, FAILED
  extractedData   String?  @db.Text // JSON string of extracted data
  extractionError String?  @db.Text
}

model Product {
  id        String   @id @default(cuid())
  sku       String   @unique
  name      String
  brand     String?
  group     String?
  createdAt DateTime @default(now())
  stocks    Stock[]
  minStockThreshold Int @default(10) // Default minimum stock threshold
  @@index([name])
}

model Stock {
  id         String   @id @default(cuid())
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId  String
  location   String   @default("TOTAL")
  quantity   Int      @default(0)
  minStock   Int      @default(0) // Minimum stock threshold
  updatedAt  DateTime @updatedAt
  @@index([productId])
  @@unique([productId, location])
}


